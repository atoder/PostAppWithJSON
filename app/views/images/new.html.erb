<h1>Add New Image</h1>

<%= form_for [@post, @image],  :html => {:multipart => true} do |f| %>
  <p>
    <%= f.file_field :attachment %>
  </p>
  <p>
    <%= f.label :remote_attachment_url, "or image URL" %><br />
    <%= f.text_field :remote_attachment_url %>
  </p>
  <p><%= f.submit %></p>
<% end %>

